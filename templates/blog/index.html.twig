{% block body %}
    
          <!-- Main Content-->
        <div class="container  my-2">
            <div class="row">


            {% if posts  %}
                    <h1> List Posts </h1>
                        <div class="col-md-3 my-3">
                            
                            <div class="card">
                                <h5 class="card-header">Categories</h5>
                                    <ul class="list-group list-group-flush">

                                        <li class="list-group-item"> 
                                            <a href="{{ path('blog-index') }}">
                                             {{ 'All' }}  
                                             <span class="badge badge-info">
                                                 {{ posts_sum }}
                                             </span>
                                            </a>
                                        </li>

                                    {% for category in categories %}
                                    
                                            <li class="list-group-item"> 
                                                <a href="?category={{ category.name  }}">
                                                 {{ category.name }}  
                                                    <span class="badge badge-info">
                                                        {{ category.occ }} 
                                                    </span>
                                                </a>
                                            </li>
                                    {% endfor %}
                                    </ul>
                            </div>

                            {% for c in categories %}                   
                                <div class="card my-3">
                                    <h5 class="card-header"> last 5 Articles of {{ c.name }}</h5>
                                        <ul class="list-group list-group-flush">
                                        {% for K, category in categories %}
                                                <li class="list-group-item"> 
                                                    {% set linkimg = 'assets/img/posts/p' ~ (K%11+1) ~ '.jpg'%}
                                                    <img src="{{ asset(linkimg) }}" class="img-fluid" alt="" width="20%">
                                                    <a href="?category={{ category.name  }}">
                                                    {{ category.name }}  
                                                    
                                                    </a>
                                                </li>
                                        {% endfor %}
                                        </ul>
                                </div>
                            {% endfor %}
                          
                        </div>
                        <div class="col-md-6">
                                {% for post in posts  %}
                                    <!-- Post preview-->

                                        {% set linkimg = 'assets/img/posts/p' ~ (post.id%11) ~ '.jpg'%}

                                        <img src="{{ asset(linkimg) }}" class="img-fluid" alt="">

                                        <div class="post-preview">
                                            <a href=" {{ path('blog-show', {'id': post.id})}}">
                                                <h2 class="post-title">{{ post.title | title }} </h2>
                                            </a>
                                    
                                            <h5 class="post-subtitle"> {{ post.content | slice(0, 77) }}...</h5>
                                            <p class="post-meta">
                                                Posted by
                                                <a href="">
                                                    <span class="badge badge-primary">
                                                        {{ post.user.username}}
                                                    </span>
                                                </a>
                                                on {{ post.published | date('d M  Y') }}  
                                            </p>
                                            <p>
                                                <span class="badge badge-danger">
                                                    #{{ post.category.name }}
                                                </span>
                                            </p>

                                        </div>
                                        <!-- Divider-->
                                        <hr class="my-4" />
                                {% endfor %}
                            
                            <!-- <div class="d-flex justify-content-end mb-4"><a class="btn btn-primary text-uppercase" href="#!">Older Posts â†’</a></div>  -->
                            <nav aria-label="Page navigation">
                                    {{  knp_pagination_render(posts) }}
                            </nav>
                        </div>

                        <div class="col-md-3">
                            <div class="card my-3">
                                <h5 class="card-header"> the 7 More Interactive</h5>
                                    <ul class="list-group list-group-flush">
                                    {% for K, category in categories %}
                                            <li class="list-group-item"> 
                                                {% set linkimg = 'assets/img/posts/p' ~ (K%11+1) ~ '.jpg'%}
                                                <img src="{{ asset(linkimg) }}" class="img-fluid" alt="" width="20%">
                                                <a href="?category={{ category.name  }}">
                                                 {{ category.name }}  
                                                  
                                                </a>
                                            </li>
                                    {% endfor %}
                                    {% for K, category in categories %}
                                            <li class="list-group-item"> 
                                                {% set linkimg = 'assets/img/posts/p' ~ (K%11+1) ~ '.jpg'%}
                                                <img src="{{ asset(linkimg) }}" class="img-fluid" alt="" width="20%">
                                                <a href="?category={{ category.name  }}">
                                                 {{ category.name }}  
                                                  
                                                </a>
                                            </li>
                                    {% endfor %}
                                    </ul>
                             </div>
                        </div>
            {% else %}
                 <h3> there are no articles !!</h3>
                 <div>
                    <p>
                      We invited to create an article
                        <a href="{{ path('blog-create')}}"> New Article </a>
                    </p>
                 </div>
                
            {% endif %}
            </div>
        </div>
        
