{% block body %}
    <div class="row">
        <div class="col-md-9 mx-auto">
            <h1 class="my-3"> {{'registration on the site'| title}} </h1>    
            {{ form_start(form)}}

            <div class="form-group">
                 {{ form_row(form.username, { 
                            'label': 'Name *', 
                            'attr':{ 'class': 'form-control', 'placeholder': 'Nom user ...'}
                            })}}
            </div>

           <div class="form-group">
                 {{ form_row(form.email, { 
                            'label': 'Email *', 
                            'attr':{ 'class': 'form-control', 'placeholder': 'Email ...'}
                            })}}
            </div>

            <div class="form-group">
                 {{ form_row(form.password, { 
                            'label': 'Password *', 
                            'attr':{ 'class': 'form-control', 'placeholder': 'Password ...'}
                            })}}
            </div>

            <div class="form-group">
                 {{ form_widget(form.confirm_password, { 
                            'label': 'Confirm Password ', 
                            'attr':{ 'class': 'form-control', 'placeholder': 'Confirm Password ...'}
                            })}}
                 {{ form_errors(form.confirm_password, { 
                            'attr':{ 'class': 'text-danger'}
                            })}}
            </div>

            <button class="btn btn-primary btn-block my-3" type="submit">Registration !</button>
            {{ form_end(form)}}
        </div>
        
    </div>
  
{% endblock %}