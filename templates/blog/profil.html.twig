{% extends "base.html.twig" %} 

{% block breadcrumb %}
    {% if count_my_posts > 0  %}
        <div class="container">
            <div class="row mt-2">
                <div class="col-md-12">
                    <ol class="breadcrumb p-2">
                            <li><a class="text-primary ml-2" href="{{ path('blog-index')}}">Home</a>&nbsp;|&nbsp;</li>
                            <li><span class="text-dark active" > My Posts </span></li>
                    </ol>
                </div>
                <div class="col-md-6"> </div>
            </div>
        </div>
    {% endif %}
{% endblock %}



{% block body %}
    
          <!-- Main Content-->
        <div class="container">
            <div class="row">
            {% if count_my_posts > 0  %}
                
                <div class="col-md-3 my-3">  
                    <h2> My List Posts </h2>        
                            <div class="card">
                                <h5 class="card-header"><i class="fa fa-list"></i>
                                            Categories</h5>
                                    <ul class="list-group list-group-flush">

                                        <li class="list-group-item"> 
                                            <a href="{{ path('blog-my-posts') }}">
                                            {{ 'All' }}  
                                            <span class="badge badge-info">
                                                {{ count_my_posts }}
                                            </span>
                                            </a>
                                        </li>
                                        <!--  Show List categories :  -->
                                             {% include "blog/components/categories.html.twig" %}
                                    </ul>
                            </div>
                        </div>

                        <div class="col-md-9">
                                {% for post in posts %}
                                    <!-- Post preview-->
                                       
                                    {% include "blog/components/post.html.twig" %}     
                   
                                    <!-- Divider-->
                                    <hr class="my-4" />
                                {% endfor %}
                            
                             <!-- <div class="d-flex justify-content-end mb-4"><a class="btn btn-primary text-uppercase" href="#!">Older Posts â†’</a></div>  -->
                            <nav aria-label="Page navigation">
                                    {{  knp_pagination_render(posts) }}
                            </nav>
                        </div>
             {% else %}

             <div class="container-md">
                 <div class="row  my-4">
                     <div class="col-md-6  mx-auto">
                        <h1> {{'there are no articles' | title}} !</h1>
                        <div>
                           <p>
                               We invited to create an article 
                               <a href="{{ path('blog-create')}}"> 
                                   <span class="badge badge-primary"> New Article </span>
                               </a>
                           </p>
                        </div>
                     </div>
                 </div>
             </div>
                 
            {% endif %}

            </div>
        </div>
        
{% endblock %}
